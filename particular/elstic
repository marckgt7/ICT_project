def extract_unique_detectors(file_path):
    try:
        # Legge il file
        with open(file_path, 'r',encoding="Utf-16") as file:
            lines = file.readlines()

        # Trova tutti i 'Detector Type'
        detector_types = [line.split(': ')[1].strip() for line in lines if line.startswith('Detector Type:')]

        # Elimina duplicati
        unique_detectors = list(set(detector_types))

        # Conta il numero di elementi
        detector_count = len(unique_detectors)

        return unique_detectors, detector_count

    except Exception as e:
        return str(e), 0

# Esempio di utilizzo
file_path = 'particular/prova1_p.txt'
unique_detectors, detector_count = extract_unique_detectors(file_path)
print("Unique Detectors:", unique_detectors)
print("Number of Unique Detectors:", detector_count)
